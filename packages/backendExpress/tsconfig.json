{
  "compilerOptions": {
    "lib": ["es5", "es6", "dom"],
    "target": "ES2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "test/*": ["test/*"]
    }
  }
}